<a href="/admin/booking" class="btn btn-warning">Back</a>

<div class="card-body">
    <div class="row">
        <div class="col-md-4">
            <img src="http://localhost:3000/<%= booking.payments.proofPayment %>" alt="image" style="width:100%; display: flexbox;" >
            <!-- <div class="col mr-4"> -->
                <% if(booking.payments.status == 'Process'){ %> 
                    <form action="/admin/booking/<%= booking.id%>/confirmation?_method=PUT" method="POST">
                        <button type="submit" class="btn btn-success  btn-block " style="margin: 1em 0;">Confirm</i></button>
                    </form>
                    <form action="/admin/booking/<%= booking.id%>/rejection?_method=PUT" method="POST">
                        <button type="submit" class="btn btn-danger  btn-block" style="margin: 1em 0;">Reject</i></button>
                    </form>
                <% } %>
                <!-- </div> -->
        </div>
        <div class="col-md-8">
            <div class="table-responsive">
            <table class="table table-bordered"  width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Member Name</th>
                        <th>Total</th>
                        <th>Bank</th>
                        <th>Title</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%= booking.memberId.firstName%> <%= booking.memberId.lastName %></td>
                        <td>$ <%= booking.total %></td>
                        <td><%= booking.payments.bankFrom %></td>
                        <td><%= booking.itemId.title %></td>
                    <% if(booking.payments.status == 'Process'){ %> 
                        <td> <span class="badge bg-warning" style="color: white ;">
                            <%= booking.payments.status %> </span></td>                            
                    <% }else if(booking.payments.status == 'Accepted'){%>
                        <td> <span class="badge bg-success" style="color: white ;">
                            <%= booking.payments.status %> </span></td>                            
                    <% }else{%>
                        <td> <span class="badge bg-danger" style="color: white ;">
                            <%= booking.payments.status %> </span></td>                            
                     <% } %>
            </tr>
                        <!-- < } > -->
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
