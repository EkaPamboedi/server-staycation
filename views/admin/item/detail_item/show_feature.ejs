<div class="tab-pane fade show active" id="show-feature" role="tabpanel" aria-labelledby="feature-tab">
    <div class="card-shadow mb-4 mt-2">
<div class="card-body">
    <div class="row">
        <div class="col-md-5">
            <div class="form-group">
             <form action="/admin/item/add/feature" method="POST" enctype="multipart/form-data">
                <div class="form-group">  
                  <label for="name">Name</label>
                  <input type="text" class="form-control " id="" name="name" placeholder="Enter Feature Name" required>
                </div>
                <div class="form-group">  
                  <label for="qty">Quantity</label>
                  <input type="number" class="form-control " id="" name="qty" placeholder="Enter Quantity" required>
                </div>
                  <div class="form-group">
                  <label for="imageUrl">feature Image </label>
                  <input type="file" class="form-control" id="" name="image" max="1" required>
                </div>
                
                <div class="modal-footer">
                    <input type="hidden" value="<%= itemId %>" name="itemId" id=""> 
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
             </form>
            </div>
        </div>
        <div class="col-md-7"> 
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Image</th>
                    <th>Action</th>
                    </tr>
                </thead>
            <tbody>
                <% for(let i = 0; i< feature.length; i++){ %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= feature[i].name %></td>
                        <td><%= feature[i].qty %></td>
                        <td>
                            <img src="http://localhost:3000/<%= feature[i].imageUrl %>" alt="imageUrl" height="70px" width="70px">
                        </td>
                        <form action="/admin/item/<%= itemId %>/feature/<%= feature[i].id %>?_method=DELETE" method="POST">
                        <td><a href="javascript:void();" 
                                type="button"  
                                class="btn btn-warning btn-circle btn-sm button-update" 
                                data-feature_id="<%= feature[i].id %>" 
                                data-feature_name="<%= feature[i].name %>" 
                                data-feature_quantity="<%= feature[i].qty %>">
                                <i class="fas fa-edit"></i></a>
                            <button type="submit" class="btn btn-danger btn-circle btn-sm button-delete" ><i class="fas fa-trash"></i></button>
                        </form>
                        </td>
                    </tr>
               <% } %>
              
            </tbody>
            </table>
        </div>
    </div>
        </div>
    </div>
</div>
