<!DOCTYPE html>
<html lang="en">
        
<!-- Header -->
    <%- include('../../../partials/header.ejs') -%>
<!--End of Header -->

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- #Sidebar# -->
        <%- include('../../../partials/sidebar.ejs') -%>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- #Main Content# -->
            <div id="content">
                
                <!-- #Navbar# -->
                <%- include('../../../partials/navbar.ejs') -%> 
                
                <div class="container-fluid">
                    <% if(alert.message != ""){ %> 
                        <div class="alert alert-<%= alert.status %>" role="alert">
                            <%= alert.message %>
                        </div>
                    <% } %>

                    <div class="card shadow mb-4">
                       <div class="card-header">
                        <h6>Detail Item</h6>
                       </div>
                        <div class="card-body">
                            
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="feature-tab" data-toggle="tab" href="#show-feature" role="tab" >Show Featur</a>
                                </li>   
                                <li class="nav-item">
                                    <a class="nav-link" id="activity-tab" data-toggle="tab" href="#show-activity" role="tab" aria-selected="false">Show Activity</a>
                                </li>
                            </ul>
                            <div class="tab-content" id="myTabContent">
                                <%- include('show_feature.ejs') %>
                                <%- include('show_activity.ejs') %>
                            </div>
                        
                    </div>

                </div>
                <!-- /.container-fluid -->

                <!-- #Footer#-->
                <%- include('../../../partials/footer.ejs') -%>
            </div>
            <!-- End of Main Content -->


        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

     <!-- #JS partials#-->
    <%- include('modal_edit_feature.ejs') -%>
    <%- include('modal_edit_activity.ejs') -%>
    <%- include('../../../partials/js.ejs') -%>

</body>
<script>
    //  2nd table for activity
    $(document).ready(function(){
        $('#dataTableActivity').DataTable();
    });

    // modal Edit Feature
    $('#dataTable').on('click', '.button-update', function(){
        let id = $(this).data('feature_id');
        let name = $(this).data('feature_name');
        // Dom dari class data-"" html gk bisa sama sama query dri db
        let quantity = $(this).data('feature_quantity');
        // console.log(id + name + quantity );            
        $('#ModalEditFeature').modal('show');
        $('.id').val(id);
        $('.name').val(name);
        $('.quantity').val(quantity);
    });

    // modal Edit Activity
    $('#dataTableActivity').on('click', '.button-update', function(){
        let id = $(this).data('id');
        let name = $(this).data('name');
        //Dom dari class data-"" html gk bisa sama sama query dri db
        let type = $(this).data('type');
        console.log(id + name + type );      
        $('#ModalEditActivity').modal('show');
        $('.id').val(id);
        $('.name').val(name);
        $('.type').val(type);
    });
    CKEDITOR.replace( 'about' );
