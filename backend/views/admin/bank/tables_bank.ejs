<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>No.</th>
            <th>Bank Name</th>
            <th>Account Number</th>
            <th>Name</th>
            <th>Logo</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i = 0; i< bank.length; i++){ %>
            <tr>
                <td><%= i + 1 %></td>
                <td><%= bank[i].bankName %></td>
                <td><%= bank[i].bankNumber %></td>
                <td><%= bank[i].name %></td>
                <td>
                    <img src="http://localhost:3000/<%= bank[i].imageUrl %>" alt="imageUrl" height="70px" width="70px">
                </td>
                <form action="/admin/bank/<%= bank[i].id %>?_method=DELETE" method="POST">
                <td><a href="javascript:void();" 
                        type="button"  
                        class="btn btn-warning btn-circle btn-sm button-update" 
                        data-bank_id="<%= bank[i].id%>" 
                        data-name_bank="<%= bank[i].bankName %>" 
                        data-number_bank="<%= bank[i].bankNumber %>" 
                        data-name_cus="<%= bank[i].name %>">
                        <i class="fas fa-edit"></i></a>
                    <button type="submit" class="btn btn-danger btn-circle btn-sm button-delete" ><i class="fas fa-trash"></i></button>
                </form>
                </td>
            </tr>
       <% } %>
    </tbody>
</table>